<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
	<id>me.ppvan.psequel.desktop</id>
    <name>PSequel</name>
    <summary>Run your SQL query</summary>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-or-later</project_license>
	<description>
	    <p>Basic features of a SQL client</p>
        <ul>
            <li>Create connection, import, export connection to database</li>
            <li>View tables, scshema, views, columns, indexes, foreign key</li>
            <li>Execute query, query history</li>
        </ul>

        <p>This project is not a part of or affiliated with PostgreSQL.</p>
	</description>
    <provides>
        <binary>psequel</binary>
    </provides>
    <developer_name>ppvan</developer_name>
